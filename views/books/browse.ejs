<% layout("layout/boilerplate") %>
<link rel="stylesheet" href="/stylesheet/browse.css" />

<h1 class="separate">Popular Today</h1>

<div class="container">
	<div id="allTimePopular" class="carousel slide shadow rounded" data-bs-ride="carousel">
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="https://res.cloudinary.com/dqdaf6ffk/image/upload/v1663034537/chapter1/sxthx_crap-1_kavjia.png" crossorigin="anonymous" class="rounded" alt="" srcset="" />
				<div class="carousel-caption d-none d-md-block">
					<h5>First slide</h5>
					<p>Some representative placeholder content for the first slide.</p>
				</div>
			</div>
			<div class="carousel-item">
				<img src="https://res.cloudinary.com/dqdaf6ffk/image/upload/v1646682003/YelpCamp/wyxai2femooxknq8svwl.png" crossorigin="anonymous" class="rounded" alt="" srcset="" />
				<div class="carousel-caption d-none d-md-block">
					<h5>Second slide</h5>
					<p>Some representative placeholder content for the first slide.</p>
				</div>
			</div>
			<div class="carousel-item">
				<img src="https://res.cloudinary.com/dqdaf6ffk/image/upload/v1646682003/YelpCamp/wyxai2femooxknq8svwl.png" crossorigin="anonymous" class="rounded" alt="" srcset="" />
				<div class="carousel-caption d-none d-md-block">
					<h5>Third slide</h5>
					<p>Some representative placeholder content for the first slide.</p>
				</div>
			</div>
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#allTimePopular" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#allTimePopular" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>
</div>

<div class="bigBox">
	<div>
		<h2 class="h2sep">New Release</h2>
	</div>
	<div class="updates">
		<% book.forEach( el => { %>
		<div class="cards">
			<div class="sbx">
				<a class="link" href="/uploads/<%=el._id%>">
					<div class="imgTL">
						<!-- <img src="<%=el.coverPicture[0].url%>" class="imgDis" alt="..." /> -->
						<img src="https://res.cloudinary.com/dqdaf6ffk/image/upload/v1662672154/chapter1/Solo_Leveling_Webtoon_nhkzpq.png" crossorigin="anonymous" class="imgDis" alt="..." />
					</div>
				</a>
				<div class="carding-body">
					<div class="info">
						<a href="/uploads/<%=el._id%>">
							<div class="tt"><%= el.title%></div>
						</a>
					</div>
					<div class="chap-list">
						<a href="/uploads/<%=el._id%>">
							<div class="adds round">
								<div class="chLin">Chapter <%= el.chapterss.slice().reverse()[0].number%></div>
								<div class="chDate">2 Hours</div>
							</div>
						</a>
						<a href="/uploads/<%=el._id%>">
							<div class="adds round">
								<div class="chLin">Chapter <%= el.chapterss.slice().reverse()[1].number%></div>
								<div class="chDate">2 Hours</div>
							</div>
						</a>
						<a href="/uploads/<%=el._id%>">
							<div class="adds round">
								<div class="chLin">Chapter <%= el.chapterss.slice().reverse()[2].number%></div>
								<div class="chDate">2 Hours</div>
							</div>
						</a>
						<a href="/uploads/<%=el._id%>">
							<div class="adds allChap">All chapters</div>
						</a>
					</div>
					<!-- <p class="card-text"><small class="text-muted"><%= el.uploadTime %> </small></p> -->
				</div>
			</div>
		</div>

		<% }); %>
	</div>
</div>
