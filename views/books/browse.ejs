<div>
	<div>
		<h2>New Release</h2>
		<br />
	</div>
	<div class="row row-cols-1 row-cols-md-2 g4">
		<% book.forEach( el => { %>
		<div class="col">
			<div class="card mb-3 shadow" style="max-width: 600px; max-height: 210px;">
				<div class="row g-0">
					<div class="col-md-4">
						<a class="link" href="/uploads/<%=el._id%>">
							<img src="<%=el.coverPicture[0].url%>" class="img-fluid rounded" style="max-width: 200px;max-height: 200px" alt="..." />
						</a>
					</div>
					<div class="col-md-8">
						<div class="card-body">
							<a class="text-decoration-none" href="/uploads/<%=el._id%>">
								<h5 class="card-title"><%= el.title%> <span class="badge rounded-pill bg-danger">New</span></h5>
							</a>
							<p class="card-text"><%= el.description %></p>
							<p class="card-text"><small class="text-muted"><%= el.uploadTime %> </small></p>
						</div>
					</div>
				</div>
			</div>
		</div>

		<% }); %>

