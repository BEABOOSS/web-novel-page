<% layout("layout/boilerplate") %>
<link rel="stylesheet" href="/stylesheet/show.css" />
<div class="">
	<div class="firstHalf">
		<div class="row">
			<div class="col">
				<div class="">
					<img src="<%= book.coverPicture[0].url%>" class="img-fluid rounded shadow-lg" alt="" srcset="" />
				</div>
			</div>
			<div class="col">
				<div class="">
					<h1><%= book.title %></h1>
					<p><span class="badge rounded-pill bg-dark"><%= book.genres %></span></p>
				</div>
				<div>
					<h3>Synopsis</h3>
					<p><%= book.description %></p>
				</div>
			</div>
		</div>
	</div>

	<div class="secondHalf">
		<div class="left-box">
			<div class="binfo">
				<div class="imptdata">
					<h5>Type</h5>
					<i>Manhwa</i>
				</div>
				<div class="imptdata">
					<h5>Status</h5>
					<i>Ongoing</i>
				</div>
				<div class="imptdata">
					<h5>Released</h5>
					<i>2020</i>
				</div>
				<div class="imptdata">
					<h5>Author</h5>
					<i>Sing-Shong</i>
				</div>
				<div class="imptdata">
					<h5>Artist</h5>
					<i>Sleepy-C (REDICE STUDIO)</i>
				</div>
				<div class="imptdata">
					<h5>Serialization</h5>
					<i>Naver Webtoon (Naver)</i>
				</div>
				<div class="imptdata">
					<h5>Translation</h5>
					<i>Flame Scans</i>
				</div>
				<div class="imptdata">
					<h5>Posted By</h5>
					<span itemprop="author" itemscope="" itemtype="https://schema.org/Person" class="author vcard">
						<i itemprop="name">SxThx</i>
					</span>
				</div>
				<div class="imptdata">
					<h5>Posted On </h5> <i><time itemprop="datePublished" datetime="2021-01-27T18:20:34+04:00">January 27, 2021</time></i>
				</div>
			</div>
		</div>
		<div class="right-box">
			<div class="release">
				<div class="title">
					<% if(currentUser && book.author.equals(currentUser.id)) {%> 
						<a href="/uploads/<%= book.id%>/edit">
							<h4><%= book.title %></h4>
						</a>
					<% } else { %>
						<h4><%= book.title%></h4>
					<% } %>  
				</div>
				<div class="first-last">
					<div class="select">
						<!-- selecting the first chapter -->
						<a class="fricking" href="/uploads/<%= book.id%>/chapterss-1">
							<span>First Chapter</span>
							<span class="episoded">Chapter 1</span>
						</a>
					</div>
					<div class="select">
						<!-- selection the last chapter -->
						<a class="fricking" href="/uploads/<%= book.id %>/chapterss-<%= lastValue %>">
							<span>New Chapter</span>
							<span class="episoded">Chapter <% lastIdx %></span>
						</a>
					</div>
				</div>
				<div class="chLister" id="chapterlist">
					<ul class="lister">
						<% revOrder.forEach( el => { %>
						<li class="li-lis" data-num="<%= el.number %>">
							<a href="/uploads/<%= book.id%>/chapterss-<%= el.number %>">
								<div class="box">
									<div class="episodeNUM">
										<span class="chapternum">Chapter <%=el.number %></span>
										<span>September 9, 2022</span>
										<!-- <span class="chapterdate"><%=el.uploadTime %></span> -->
									</div>
								</div>
							</a>
						</li>

						<% })%>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<div class="third-half">
		<div class="title">
			<h2>Reviews</h2>
		</div>
		<div class="box1">
			<div class="posts">
				<% if(currentUser) { %>
					<h3>Leave a Review</h3> 
				<div class="form">
					<form action="/uploads/<%= book.id%>/reviews" method="POST" class="" novalidate>
						<div>
							<label for="rating">Rating</label>
							<input type="number" name="rating" id="rating" required >
						</div>
						<div>
							<label class="" for="body">Review Text</label>
							<textarea name="body" id="body" cols="150" rows="3" required></textarea>
						</div>
						<button class="btn search-butn">Submit</button>
					</form>
				</div>
				<% } %> 
				<div class="allreviews">
					<% for(let review of book.reviews) { %>
						<div class="card mb-3 cards">
							<div class="card-body ">
								<h5><%= review.author.username%></h5>
								<p>Review: <%= review.body %> </p>
							</div>
						</div>
					
					<% } %>  
				</div>
			</div>
		</div>
	</div>
</div>
