<% layout("layout/boilerplate") %>
<link rel="stylesheet" href="/stylesheet/chapter.css " />

<div class="chapBody">
	<div class="area">
		<div class="post-id" id="<%= book.id%>">
			<div class="topPost">
				<h1 class="title"><%= book.title %> Chapter <%= number2%></h1>
				<p>Return To<a class="allchap" href="/uploads/<%= book.id%>"> All Chapters</a></p>
			</div>
			<div class="maincontent">
				<div class="selectors">
					<span class="chapSelc"></span>
					<span class="nav-r">
						<div class="nextprev">
							<% if(lastIdx === undefined) { %>
							<a class="disabled">
								<div class="adds">Prev</div>
							</a>
							<% } else { %>
							<a href="/uploads/<%= book.id%>/chapterss-<%= lastIdx.number %>">
								<div class="prev">Prev</div>
							</a>
							<% } %> <% if (nextIdx == undefined) { %>
							<a class="disabled">
								<div class="prev">Next</div>
							</a>
							<% } else { %>
							<a href="/uploads/<%= book.id%>/chapterss-<%= nextIdx.number %>">
								<div class="prev">Next</div>
							</a>
							<% } %>
						</div>
					</span>
				</div>
				<div class="reading">
					<% book.chapterss[number2].images.forEach(el => { %>
					<p>
						<img src="<%= el.url%>" crossorigin="anonymous" width="800" height="1000" alt />
					</p>
					<% }) %>
				</div>
				<div class="selectors">
					<span class="chapSelc"></span>
					<span class="nav-r">
						<div class="nextprev">
							<% if(lastIdx === undefined) { %>
							<a class="disabled">
								<div class="adds">Prev</div>
							</a>
							<% } else { %>
							<a href="/uploads/<%= book.id%>/chapterss-<%= lastIdx.number %>">
								<div class="prev">Prev</div>
							</a>
							<% } %> <% if (nextIdx == undefined) { %>
							<a class="disabled">
								<div class="prev">Next</div>
							</a>
							<% } else { %>
							<a href="/uploads/<%= book.id%>/chapterss-<%= nextIdx.number %>">
								<div class="prev">Next</div>
							</a>
							<% } %>
						</div>
					</span>
				</div>
			</div>
		</div>
	</div>
</div>
